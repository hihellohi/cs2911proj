<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0" alignment="center" hgap="10" vgap="10" fx:id="root">

    <VBox spacing="10" alignment="CENTER">
        <Label GridPane.rowIndex="1" text="Warehouse Boss" fx:id="bigText"/>
        <Button GridPane.rowIndex="2" text="Play Game" fx:id="playGameBtn"/>
        <Button GridPane.rowIndex="3" text="Host Game" fx:id="hostBtn"/>
        <Button GridPane.rowIndex="4" text="Join Game" fx:id="clientBtn"/>
        <Button GridPane.rowIndex="5" text="Local MultiPlayer" fx:id="localBtn"/>
        <Button GridPane.rowIndex="6" text="Tutorial" fx:id="tutorialBtn"/>
        <Button GridPane.rowIndex="7" text="Settings" fx:id="settingsBtn"/>
        <Button GridPane.rowIndex="8" text="Exit" fx:id="closeGameBtn"/>
    </VBox>
</GridPane>
